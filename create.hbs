        <form id="registrationForm" method="post" action="/create">
        <h2>New Account Registration</h2>
            <label for="name">Name:</label>
            <input type="text" id="name" name="customer_name" placeholder="Your Name" required autocomplete="off"><br>

            <label for="address">Address:</label>
            <textarea id="address" name="address" rows="4" placeholder="Your Address" required autocomplete="off"></textarea><br>

             <label>Gender:</label><br>
            <input type="radio" id="male" name="gender" value="male" required><label for="male">Male</label><br>
            <input type="radio" id="female" name="gender" value="female"><label for="female">Female</label><br>


            <label for="phoneNumber">Phone Number:</label>
            <input type="tel" id="phoneNumber" name="phone" placeholder="Your Phone Number" required autocomplete="off"><br>

            <label for="accountType">Account Type:</label>
            <select id="accountType" name="account_type" required>
                <option value="">Select Account Type</option>
                <option value="Savings">Savings</option>
                <option value="Checking">Checking</option>
                <option value="Investment">Investment</option>
            </select><br>

            <label for="amountDeposit">Amount Deposit:</label>
            <input type="number" id="amountDeposit" name="amount" placeholder="Amount to Deposit" required autocomplete="off"><br>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" placeholder="Your Email" required autocomplete="off"><br>

            <label for="accountNumber">Account Number:</label>
            <input type="text" id="accountNumber" name="account_number" value="{{accountNumber}}" readonly><br>

            <label for="date">Date:</label>
            <input type="text" id="date" name="creation_date" value="{{currentDate}}" readonly><br>

             <label for="pass">Password:</label>
            <input type="text" id="pass" name="password" autocomplete="off"><br>

            <button type="submit" >Create Account</button>
            <button type="reset">Cancel</button>
        </form>
</div>
</div>

   
